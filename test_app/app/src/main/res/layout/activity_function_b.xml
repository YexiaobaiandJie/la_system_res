<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:id="@+id/lay1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:orientation="horizontal"
        android:padding="20dp">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="160dp"
          android:layout_marginRight="10dp"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:text="待审批单列表"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="14dp"
            android:singleLine="true"

            android:drawableTop="@mipmap/shenhe"/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="160dp"
          android:layout_marginLeft="10dp"
          android:orientation="vertical"

          >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:text="开发中"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="14dp"
            android:singleLine="true"

            android:drawableTop="@mipmap/kaifa"/>
      </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"

        android:layout_margin="1dp"

        >

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="5dp"
          android:gravity="center">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/func_1"
            />
      </LinearLayout>






    </LinearLayout>



  </LinearLayout>



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/lay2"
      android:orientation="vertical"
      android:layout_gravity="start"
      android:background="#c9c9c9"
      android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.6"
        android:orientation="vertical"

        >


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.5"
          android:orientation="horizontal"
          android:padding="20dp"
          >

        <TextView
            android:id="@+id/textView62"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:textSize="17dp"
            android:text="用户名"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#c2c2c2"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.37"
          android:orientation="horizontal"
          android:padding="20dp">
        <TextView
            android:id="@+id/textView262"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/dep"/>

        <TextView
            android:id="@+id/user_dep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:text="部门"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
      </LinearLayout>


      <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#c2c2c2"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.37"
          android:orientation="horizontal"
          android:id="@+id/chg_phone"
          android:padding="20dp">
        <TextView
            android:id="@+id/textView362"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/phone"/>

        <TextView
            android:id="@+id/user_cellphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:text="电话"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#c2c2c2"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.37"
          android:orientation="horizontal"
          android:padding="20dp"
          android:id="@+id/chg_email">
        <TextView
            android:id="@+id/textView462"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/email"/>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:text="邮箱"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#c2c2c2"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.37"
          android:orientation="horizontal"
          android:padding="20dp"
          android:id="@+id/changepwd">
        <TextView
            android:id="@+id/textView562"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/pwd"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:text="修改密码"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

      </LinearLayout>
      <TextView
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#c2c2c2"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.0"
          android:orientation="horizontal"></LinearLayout>
    </LinearLayout>



  </LinearLayout>




</android.support.v4.widget.DrawerLayout>
